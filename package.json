{
  "name": "excel-toolbox",
  "version": "1.0.0",
  "description": "一个基于 Electron + Vue3 + Pyodide 的 Excel 处理工具，支持插件化开发",
  "main": "packages/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "electron .",
    "electron:build": "electron-builder",
    "build:py": "node scripts/build-pyodide.js"
  },
  "keywords": [
    "electron",
    "vue3",
    "excel",
    "pyodide",
    "desktop-app"
  ],
  "author": "Excel Toolbox Team",
  "license": "ISC",
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "electron": "^27.3.11",
    "electron-builder": "^24.13.3",
    "terser": "^5.46.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vue-tsc": "^1.8.0"
  },
  "dependencies": {
    "ant-design-vue": "^4.0.0",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0"
  },
  "build": {
    "appId": "com.excelbox.app",
    "productName": "Excel工具箱",
    "directories": {
      "output": "dist"
    },
    "files": [
      "packages/main/**/*",
      "packages/preload/**/*",
      "packages/renderer/dist/**/*",
      "plugins/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Office"
    }
  }
}
