{
  "name": "excel-toolkit-desktop",
  "version": "1.0.0",
  "description": "Excel 工具箱 - 功能完备的桌面端 Excel 批量处理工具",
  "main": "dist-electron/main.js",
  "author": "Excel Toolkit Team",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "build:python:win": "cd python-backend && pyinstaller excel-toolkit-backend.spec --distpath ../python-dist/win",
    "build:python:mac": "cd python-backend && pyinstaller excel-toolkit-backend.spec --distpath ../python-dist/mac",
    "build:python:linux": "cd python-backend && pyinstaller excel-toolkit-backend.spec --distpath ../python-dist/linux",
    "build:win": "npm run build:python:win && npm run build -- --win",
    "build:mac": "npm run build:python:mac && npm run build -- --mac",
    "build:linux": "npm run build:python:linux && npm run build -- --linux",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "electron": "^28.0.0",
    "pinia": "^2.3.1",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "electron-builder": "^24.9.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0"
  }
}
